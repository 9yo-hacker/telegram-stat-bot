# .env.example
# Copy to .env and fill values

# ASP.NET Core
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://0.0.0.0:8080

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tutor_platform
DB_USER=tutor
DB_PASSWORD=tutor_password

# Connection string (option 1: build from parts in app)
# Or use a single connection string (option 2) and ignore the parts above:
CONNECTION_STRING=Host=localhost;Port=5432;Database=tutor_platform;Username=tutor;Password=tutor_password

# JWT
JWT_ISSUER=tutor-platform
JWT_AUDIENCE=tutor-platform
JWT_SECRET=CHANGE_ME_TO_A_LONG_RANDOM_SECRET_32+_CHARS

# CORS (comma separated)
CORS_ORIGINS=http://localhost:3000
